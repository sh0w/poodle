<h1>Listing resources</h1>

<table>
  <tr>
    <th>Page</th>
    <th>Position</th>
    <th>Headline</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.page_id %></td>
    <td><%= resource.position %></td>
    <td><%= resource.headline %></td>
    <td><%= resource.attachment_type %></td>
    <td><%= resource.attachment_id %></td>
    <td>
      <% if ! resource.attachment_id.blank? %>
      <%= render resource.attachment %>
      <% end %>
    </td>
 </tr>
<% end %>
</table>

<br />

