<%
   page = link.resource.page
   lesson = page.lesson
   course = lesson.course
%>

<%= link_to button_tag("<i class='icon-globe'></i> #{link.resource.headline}".html_safe, class: "btn"), edit_course_lesson_page_link_path(course,lesson,page,link), id: "edit_link_link", remote: true, title: "edit resource" %>
<%= link_to '<i class="icon-trash"></i>'.html_safe, [ course, lesson, page, link.resource ], method: :delete, data: { confirm: 'Are you sure?' }, id: "remove_resource_link", remote: true %>

