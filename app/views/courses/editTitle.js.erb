elem = $('#coursetitle');
elem.html("<%= j render :partial => "editTitleForm", :locals => { :course => @course } %>");
elem.append("<input type='button' value='cancel' class='cancelbutton'>");
elem.find(".cancelbutton").button().click(function(){
    elem.html("<%= j render :partial => "courses/editor/title", :object => @course %>");
});
