 <section id="intro">

    <header>
      <h1>
        <%= @course.title %></h1>
    </header>

   <div id="intro_content">

     <!---Bild und Bewertung--->
     <figure >
       <%= image_tag "img/rating.png", :class => "rating_bar" %>
       <%= image_tag "img/intro_img.jpg", :class => "course_pic" %>
     </figure>
     <!---Beschreibung--->
     <div id="intro_text">
       <p>Created by <span id="creator">
        <%= User.find(@course.creates_course.user_id).username %>              </span>
        <span class="when"><%= time_ago_in_words(@course.creates_course.created_at) %> ago</span>
     </p>

       <%= @course.description %>

       <%= link_to 'Edit', edit_course_path(@course) %>
       <p id="notice"><%= notice %></p> </div>

     <!---Fortschritt--->
     <div id="progress">
       <% if !@course.taken_by_user(current_user.id).blank? %>
           <h3>Your progress</h3>
           <div class="progress progress-striped">
             <div class="bar" style="width: 40%;"></div>
           </div>
       <% else %>
           <%= link_to "Start this course", start_path(@course), :class=>"btn btn-primary start-course btn-block btn-large" %>
       <% end %>
     </div>

     <!---social networks--->
     <aside id="share">
       <h1>Share this</h1>
     </aside>

   </div>

  </section>





 <section id="overview">
    <hr /><header>
    <h1>Overview</h1>
  </header>

    <hr />
    <div id="lessons" class="row-fluid">

      <% @lessons.each_with_index do |lesson, index| %>
          <div class="locked well span3">
            <h2><%= lesson.title %></h2>
            <p><%= lesson.description %></p>
          </div>
          <% if (index+1) % 4 == 0 && index > 3 %>
              </div>
              <div class="row-fluid">
          <% end %>
      <% end %>

    </div>
  </section>

  <section id="comments">
    <hr />	<header>

    <h1>Comments</h1>

  </header>
    <hr />
    <section id="commentbox" class="clearfix">

      <% @comments.each do |comment| %>
          <% u = User.find(comment.user_id) %>
          <div class="comment">
            <div class="comment_content">
                <header>
                  <div class="info">

                    <%= image_tag u.avatar.url(:thumb) %>
                    <a href="#"><%= u.username %></a>

                    <div class="when"><%= time_ago_in_words(comment.created_at) %> ago</div>
                  </div>
                </header>
                <div class="content">
                  <%= comment.content %>
                </div>
            </div>
          </div>
      <% end %>
      <% if user_signed_in? %>
          <div class="comment new">
            <div class="form">
              <%= link_to 'New Comment', {:controller => "comments", :action => "new",:course_id => @course.id },
                          id: "new_comment_link", remote: true %>
              <!-- TODO: render different form (:controller => comments) -->
            </div>
          </div>
      <% end %>


    </section>

  </section>
