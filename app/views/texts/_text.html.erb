<%
   page = text.resource.page
   lesson = page.lesson
   course = lesson.course
%>
<%= link_to button_tag("<i class='icon-font'></i> #{text.resource.headline}".html_safe, class: "btn"), edit_course_lesson_page_text_path(course,lesson,page,text), id: "edit_text_link", remote: true, title: "edit resource" %>

<%= link_to '<i class="icon-trash"></i>'.html_safe, [ course, lesson, page, text.resource ], method: :delete, data: { confirm: 'Are you sure?' }, id: "remove_resource_link", remote: true %>

