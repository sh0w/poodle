$('#pageeditor').html("");
$('#pageeditor').append('<%= j render("edit") %>');

var numberofpages = $( ".page" ).length;
var pageswidth = 225 * numberofpages + 5;
$('#pages').css("width", pageswidth);

$( "#pages" ).sortable({
  update: function(){
    update_page_position();
  }
});
$( "#pages" ).disableSelection();

$( "#pages" ).find( ".resources" ).sortable({
  update: function(){
    page_id = $(this).parent().attr("id").split("_")[1];
    update_resource_position(page_id);
  }
});
$( "#resources" ).disableSelection();
