<%
   page = video.resource.page
   lesson = page.lesson
   course = lesson.course
%>

<%= link_to button_tag("<i class='icon-film'></i> #{video.resource.headline}".html_safe, class: "btn"), edit_course_lesson_page_link_path(course,lesson,page,video), id: "edit_video_link", remote: true, title: "edit resource" %>
<%= link_to '<i class="icon-trash"></i>'.html_safe, [ course, lesson, page, video.resource ], method: :delete, data: { confirm: 'Are you sure?' }, id: "remove_resource_link", remote: true %>

